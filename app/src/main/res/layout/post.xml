<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"/>

    <!-- Username -->
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textStyle="bold"
        android:layout_toEndOf="@id/profile_picture"
        android:layout_alignBaseline="@id/profile_picture"/>

    <!-- Post Content -->
    <include
        android:id="@+id/post_fragment"
        layout="@layout/fragment_user_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_picture"
        android:layout_marginTop="8dp"/>

    <!-- Likes Icon -->
    <Button
        android:id="@+id/like_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/post_fragment"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/like"
        android:contentDescription="@string/like_button"
        android:gravity="center" />

    <!-- Comments Button -->
    <Button
        android:id="@+id/comment_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/post_fragment"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/like_button"
        android:background="@drawable/comment"
        android:contentDescription="@string/comment_button"
        android:gravity="center" />

</RelativeLayout>
